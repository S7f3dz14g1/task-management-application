<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_edit_item"
    >

    <ImageView
        android:id="@+id/imageEditTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_low_priority" />

    <EditText
        android:id="@+id/descryptionEditTask"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:ems="10"
        android:hint="Descryption"
        android:inputType="textPersonName"
        android:enabled="false"
        android:gravity="center"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/editEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit"
            android:background="@drawable/button_background"/>

        <Button
            android:id="@+id/finishEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/finish"
            android:background="@drawable/button_background"/>
    </LinearLayout>
</LinearLayout>